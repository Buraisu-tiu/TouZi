<div class="dashboard">
    <div class="dashboard-header">
        <h1 class="dashboard-title">Your Portfolio</h1>
        {# Check if portfolio_data_obj and its summary are defined #}
        {% if portfolio_data_obj and portfolio_data_obj.summary %}
        <div class="portfolio-summary">
            <div class="summary-item">
                <span class="summary-label">Total Value</span>
                <span class="summary-value">{{ portfolio_data_obj.summary['Total Assets'] }}</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">Cash Balance</span>
                <span class="summary-value">{{ portfolio_data_obj.summary['Cash Balance'] }}</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">Invested Value</span>
                <span class="summary-value">{{ portfolio_data_obj.summary['Invested Value'] }}</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">Today's P/L</span>
                <span class="summary-value {% if portfolio_data_obj.summary.day_change_raw > 0 %}positive{% elif portfolio_data_obj.summary.day_change_raw < 0 %}negative{% endif %}">{{ portfolio_data_obj.summary["Today's P/L"] }}</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">Total P/L</span>
                <span class="summary-value {% if portfolio_data_obj.summary.total_pl_raw > 0 %}positive{% elif portfolio_data_obj.summary.total_pl_raw < 0 %}negative{% endif %}">{{ portfolio_data_obj.summary['Total P/L'] }}</span>
            </div>
        </div>
        {% else %}
         <div class="portfolio-summary">
            <div class="summary-item">
                <span class="summary-label">Total Value</span>
                <span class="summary-value">$0.00</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">Cash Balance</span>
                <span class="summary-value">$0.00</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">Invested Value</span>
                <span class="summary-value">$0.00</span>
            </div>
        </div>
        {% endif %}
    </div>

    {% if portfolio_data_obj and portfolio_data_obj.summary %}
    <div class="holdings-section">
        <h2>Your Holdings ({{ portfolio_data_obj.summary['Active Positions']|default(0) }} positions)</h2>
        
        {% if portfolio_data_obj.positions and portfolio_data_obj.positions|length > 0 %}
            <div class="holdings-grid">
                {% for position in portfolio_data_obj.positions %}
                    <div class="position-card">
                        <div class="position-header">
                            <div class="position-symbol">{{ position.symbol }}</div>
                            <div class="position-shares">{{ "%.2f"|format(position.shares) }} shares</div>
                        </div>
                        <div class="position-details">
                            <div class="detail-row">
                                <span class="detail-label">Current Value:</span>
                                <span class="detail-value">${{ "%.2f"|format(position.value) }}</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Avg. Purchase Price:</span>
                                <span class="detail-value">${{ "%.2f"|format(position.purchase_price) }}</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Current Price:</span>
                                <span class="detail-value">${{ "%.2f"|format(position.current_price) }}</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Day's Change:</span>
                                <span class="detail-value {% if position.day_change >= 0 %}positive{% else %}negative{% endif %}">
                                    {{ "%+.2f"|format(position.day_change) }}
                                </span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Total P/L:</span>
                                <span class="detail-value {% if position.profit_loss >= 0 %}positive{% else %}negative{% endif %}">
                                    ${{ "%+.2f"|format(position.profit_loss) }} ({{ "%.1f"|format(position.profit_loss_pct) }}%)
                                </span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Purchase Date:</span>
                                <span class="detail-value">{{ position.purchase_date.strftime('%Y-%m-%d') if position.purchase_date else 'N/A' }}</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-portfolio">
                <p>You don't have any positions yet. Start trading to build your portfolio!</p>
                <a href="{{ url_for('trading.buy') }}" class="cta-button">Make Your First Trade</a>
            </div>
        {% endif %}
    </div>
    {% else %}
        {# Fallback content if portfolio_data_obj is not defined or is None #}
        <!-- JINJA DEBUG: Rendering ELSE block for holdings-section -->
        <div class="container" style="text-align: center; padding: 2rem;">
             <p>Portfolio data is currently unavailable. Please try again later.</p>
             <p><a href="{{ url_for('user.dashboard') if user else url_for('auth.login') }}" class="cta-button">Go to Dashboard</a></p>
        </div>
    {% endif %}
</div>

{% endblock %}