{% extends "base.html.jinja2" %}
{% block content %}
<style>
    :root {
        --accent-color: {{ user.accent_color if user and user.accent_color else '#64ffda' }};
        --background-color: {{ user.background_color if user and user.background_color else '#0a0a0a' }};
        --text-color: {{ user.text_color if user and user.text_color else '#ffffff' }};
    }

    body {
        background-color: var(--background-color);
        margin: 0;
        padding: 0;
        min-height: 100vh;
        color: var(--text-color);
    }

    .dashboard {
        width: 100%;
        min-height: 100vh;
        margin: 0;
        padding: 2rem;
        background: 
            var(--background-color);
        position: relative;
        box-sizing: border-box;
    }
    
    .dashboard::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            linear-gradient(90deg, rgba(0, 0, 0, 0.4) 1px, transparent 1px);
        background-size: 50px 50px;
        opacity: 0.1;
        z-index: -1;
        pointer-events: none;
    }

    .profile-card {
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 24px;
        padding: 2rem;
        margin-bottom: 2.5rem;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
    }

    .profile-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
        border-color: rgba({{ user.accent_color if user and user.accent_color else '#64ffda' | hex_to_rgb }}, 0.3);
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .profile-picture {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
    }

    .profile-info {
        flex: 1;
    }

    .profile-title {
        font-size: 2.25rem;
        font-weight: 700;
        margin: 0;
        background: linear-gradient(to right, var(--text-color), rgba(255,255,255,0.7));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .balance {
        font-size: 1.5rem;
        margin-top: 0.5rem;
        font-weight: 500;
        color: var(--accent-color);
    }

    .content-container {
        max-width: 1400px;
        margin: 0 auto;
    }
    
    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 2rem;
        background: linear-gradient(to right, #fff, rgba(255,255,255,0.7));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
        display: inline-block;
    }
    
    .dashboard-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 60px;
        height: 4px;
        background: var(--accent-color);
        border-radius: 2px;
    }

    .portfolio-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 0.75rem;
        margin-bottom: 2rem;
    }

    .portfolio-table th {
        text-align: left;
        padding: 1rem 1.5rem;
        font-weight: 500;
        color: rgba(255,255,255,0.6);
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .portfolio-table th:first-child {
        border-top-left-radius: 12px;
    }

    .portfolio-table th:last-child {
        border-top-right-radius: 12px;
        text-align: right;
    }

    .portfolio-table td {
        background: rgba(0, 0, 0, 0.3);
        padding: 1.5rem;
        transition: all 0.3s ease;
        vertical-align: middle;
    }

    .portfolio-table td:first-child {
        border-top-left-radius: 12px;
        border-bottom-left-radius: 12px;
        font-weight: 600;
    }

    .portfolio-table td:last-child {
        border-top-right-radius: 12px;
        border-bottom-right-radius: 12px;
        text-align: right;
    }

    .portfolio-table tbody tr {
        margin-bottom: 0.75rem;
        transition: all 0.3s ease;
    }

    .portfolio-table tbody tr:hover td {
        background: rgba({{ user.accent_color if user and user.accent_color else '#64ffda' | hex_to_rgb }}, 0.1);
        transform: translateY(-3px);
    }

    .portfolio-summary {
        background: rgba(0, 0, 0, 0.4);
        padding: 1.5rem 2rem;
        border-radius: 16px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 2rem;
        backdrop-filter: blur(10px);
    }

    .summary-label {
        font-size: 1.1rem;
        font-weight: 500;
        color: rgba(255,255,255,0.7);
    }

    .total-value {
        font-size: 2rem;
        font-weight: 700;
        color: var(--accent-color);
    }
    
    /* Badges Styling */
    .badges-section {
        margin-top: 3rem;
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
    }
    
    .section-title {
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        position: relative;
        display: inline-block;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 40px;
        height: 3px;
        background: var(--accent-color);
        border-radius: 2px;
    }

    .badges-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .badge {
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 16px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .badge:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        background: rgba({{ user.accent_color if user and user.accent_color else '#64ffda' | hex_to_rgb }}, 0.1);
    }

    .badge-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .badge-name {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--accent-color);
    }

    .badge-description {
        font-size: 0.9rem;
        line-height: 1.4;
        color: rgba(255,255,255,0.7);
    }
    
    .text-success {
        color: #4caf50;
    }
    
    .text-danger {
        color: #f44336;
    }
    
    .empty-portfolio {
        text-align: center;
        padding: 3rem;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 16px;
        margin-top: 2rem;
    }
    
    .empty-portfolio h2 {
        font-size: 1.8rem;
        margin-bottom: 1rem;
        color: var(--accent-color);
    }
    
    .empty-portfolio p {
        font-size: 1.1rem;
        margin-bottom: 2rem;
        color: rgba(255, 255, 255, 0.7);
    }
    
    .action-button {
        display: inline-block;
        padding: 1rem 2rem;
        background: var(--accent-color);
        color: var(--background-color);
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .action-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }
    
    @media (max-width: 768px) {
        .profile-header {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
        
        .profile-picture {
            margin-bottom: 1rem;
        }
        
        .portfolio-table {
            font-size: 0.9rem;
        }
        
        .portfolio-table td, 
        .portfolio-table th {
            padding: 1rem;
        }
        
        .total-value {
            font-size: 1.5rem;
        }
    }
</style>

<div class="dashboard">
    <div class="content-container">
        <div class="profile-card">
            <div class="profile-header">
                <img src="{{ profile_picture }}" alt="Profile Picture" class="profile-picture">
                <div class="profile-info">
                    <h1 class="profile-title">{{ user.username }}'s Portfolio</h1>
                    <div class="balance">
                        Available Balance: ${{ "%.2f"|format(user.balance|default(0)) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Check if portfolio is empty -->
        {% if portfolio|length == 0 %}
            <div class="empty-portfolio">
                <h2>Your portfolio is empty</h2>
                <p>You haven't purchased any stocks yet. Start trading to build your portfolio!</p>
                <a href="{{ url_for('trading.buy') }}" class="action-button">Start Trading</a>
            </div>
        {% else %}
            <!-- Portfolio table -->
            <table class="portfolio-table">
                <thead>
                    <tr>
                        <th>Symbol</th>
                        <th>Shares</th>
                        <th>Purchase Price</th>
                        <th>Current Price</th>
                        <th>Total Value</th>
                        <th>Profit/Loss</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in portfolio %}
                        <tr>
                            <td>{{ item.symbol }}</td>
                            <td>{{ item.shares }}</td>
                            <td>${{ "%.2f"|format(item.purchase_price) }}</td>
                            <td>${{ "%.2f"|format(item.latest_price) }}</td>
                            <td>${{ "%.2f"|format(item.value) }}</td>
                            <td class="{% if item.profit_loss > 0 %}text-success{% elif item.profit_loss < 0 %}text-danger{% endif %}">
                                {% if item.profit_loss %}
                                    {{ "%.2f"|format(item.profit_loss) }}%
                                {% else %}
                                    0.00%
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="portfolio-summary">
                <div class="summary-label">Total Portfolio Value</div>
                <div class="total-value">${{ "%.2f"|format(total_value) }}</div>
            </div>
        {% endif %}

        <!-- Badges Section -->
        {% if badges|length > 0 %}
            <div class="badges-section">
                <h2 class="section-title">Achievements</h2>
                <div class="badges-container">
                    {% for badge in badges %}
                        <div class="badge">
                            <div class="badge-icon">üèÜ</div>
                            <div class="badge-name">{{ badge.name }}</div>
                            <div class="badge-description">{{ badge.description }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}