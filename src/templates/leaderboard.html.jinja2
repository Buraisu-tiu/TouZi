{% extends "base.html.jinja2" %}

{% block content %}
<style>
    :root {
        --accent-color: {{ user.accent_color if user and user.accent_color else '#64ffda' }};
        --background-color: {{ user.background_color if user and user.background_color else '#0a0a0a' }};
        --text-color: {{ user.text_color if user and user.text_color else '#ffffff' }};
    }

    .leaderboard-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .leaderboard-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .leaderboard-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        background: linear-gradient(to right, #fff, rgba(255,255,255,0.7));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .podium-section {
        display: flex;
        justify-content: center;
        align-items: flex-end;
        gap: 2rem;
        margin-bottom: 4rem;
        box-shadow: 0 0 20px rgba({{ user.accent_color | hex_to_rgb if user and user.accent_color else '100, 255, 218' }}, 0.3);
    }

    .podium-spot {
        text-align: center;
        transition: transform 0.3s ease;
    }

    .podium-spot:hover {
        transform: translateY(-10px);
    }

    .podium-1 {
        order: 2;
        margin-bottom: 0;
    }

    .podium-2 {
        order: 1;
        margin-bottom: 30px;
    }

    .podium-3 {
        order: 3;
        margin-bottom: 50px;
    }

    .podium-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 3px solid {{ user.accent_color if user and user.accent_color else '#64ffda' }};
        margin-bottom: 1rem;
        box-shadow: 0 0 20px {{ user.accent_color if user and user.accent_color else '#64ffda' }}40;
    }

    .podium-username {
        font-size: 1.2rem;
        font-weight: 600;
        color: #fff;
        text-decoration: none;
        margin-bottom: 0.5rem;
        display: block;
    }

    .podium-value {
        font-size: 1.1rem;
        color: var(--accent-color);
        font-weight: 500;
    }

    .leaderboard-table {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }

    .leaderboard-row {
        display: grid;
        grid-template-columns: auto 60px 1fr auto;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }

    .leaderboard-row:hover {
        transform: translateX(10px);
        background: rgba({{ user.accent_color | hex_to_rgb if user and user.accent_color else '100, 255, 218' }}, 0.1);
        border-color: var(--accent-color);
    }

    .rank {
        font-size: 1.2rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.6);
        width: 30px;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 2px solid var(--accent-color);
    }

    .username {
        color: #fff;
        text-decoration: none;
        font-weight: 500;
    }

    .value {
        font-family: 'SF Mono', monospace;
        color: var(--accent-color);
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: rgba(255, 255, 255, 0.6);
    }

    @media (max-width: 768px) {
        .podium-section {
            flex-direction: column;
            align-items: center;
            gap: 2rem;
        }

        .podium-spot {
            margin-bottom: 0 !important;
            order: unset !important;
        }

        .leaderboard-row {
            grid-template-columns: auto 40px 1fr auto;
            gap: 0.5rem;
            padding: 0.75rem;
        }
    }
</style>

<div class="leaderboard-container">
    <div class="leaderboard-header">
        <h1>Top Traders</h1>
        <p>See how you stack up against other traders</p>
    </div>

    {% if leaderboard %}
        <div class="podium-section">
            {% for user in leaderboard[:3] %}
                <div class="podium-spot podium-{{ loop.index }}">
                    <img src="{{ user.profile_picture }}" alt="{{ user.username }}" class="podium-avatar">
                    <a href="{{ url_for('portfolio.view_portfolio', user_id=user.user_id) }}" class="podium-username">
                        {{ user.username }}
                    </a>
                    <div class="podium-value">${{ "%.2f"|format(user.total_value) }}</div>
                </div>
            {% endfor %}
        </div>

        <div class="leaderboard-table">
            {% for user in leaderboard[3:] %}
                <div class="leaderboard-row">
                    <div class="rank">{{ loop.index + 3 }}</div>
                    <img src="{{ user.profile_picture }}" alt="{{ user.username }}" class="user-avatar">
                    <a href="{{ url_for('portfolio.view_portfolio', user_id=user.user_id) }}" class="username">
                        {{ user.username }}
                    </a>
                    <div class="value">${{ "%.2f"|format(user.total_value) }}</div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <p>No traders found. Be the first to start trading!</p>
        </div>
    {% endif %}
</div>
{% endblock %}