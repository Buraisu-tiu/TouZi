{% extends "base.html.jinja2" %}
{% block content %}
<style>
    .leaderboard-page {
        min-height: 100vh;
        width: 100%;
        background: 
            radial-gradient(circle at top right, 
                {{ user.accent_color if user and user.accent_color else '#64ffda' }}15 0%, 
                transparent 60%),
            var(--bg-color);
        padding: 2rem;
        box-sizing: border-box;
        position: relative;
        overflow: hidden;
    }

    .leaderboard-page::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            linear-gradient(rgba(0, 0, 0, 0.2) 1px, transparent 1px),
            linear-gradient(90deg, rgba(0, 0, 0, 0.2) 1px, transparent 1px);
        background-size: 50px 50px;
        opacity: 0.1;
        z-index: 0;
    }

    .leaderboard-container {
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .leaderboard-title {
        font-size: 2.5rem;
        font-weight: 800;
        text-align: center;
        margin-bottom: 3rem;
        background: linear-gradient(to right, var(--text-color), rgba(255,255,255,0.7));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
    }

    .leaderboard-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 4px;
        background: var(--accent-color);
        border-radius: 2px;
    }

    .podium-section {
        display: flex;
        justify-content: center;
        align-items: flex-end;
        gap: 2rem;
        margin-bottom: 4rem;
        padding: 2rem;
    }

    .podium-place {
        display: flex;
        flex-direction: column;
        align-items: center;
        animation: floatAnimation 3s ease-in-out infinite;
    }

    .second-place { animation-delay: 0.2s; }
    .first-place { animation-delay: 0.4s; }
    .third-place { animation-delay: 0.6s; }

    @keyframes floatAnimation {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    .profile-picture {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 3px solid var(--accent-color);
        box-shadow: 0 0 20px var(--accent-color);
        margin-bottom: 1rem;
        transition: transform 0.3s ease;
    }

    .profile-picture:hover {
        transform: scale(1.1);
    }

    .podium-block {
        width: 200px;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px 16px 0 0;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s ease;
    }

    .first-place .podium-block { height: 200px; }
    .second-place .podium-block { height: 160px; }
    .third-place .podium-block { height: 120px; }

    .podium-username {
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0.5rem 0;
        color: var(--text-color);
    }

    .podium-value {
        font-family: 'SF Mono', monospace;
        font-size: 1.4rem;
        color: var(--accent-color);
    }

    .leaderboard-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 0.75rem;
    }

    .leaderboard-table tr {
        transition: transform 0.3s ease;
    }

    .leaderboard-table tr:hover {
        transform: translateX(10px);
    }

    .leaderboard-table th,
    .leaderboard-table td {
        padding: 1.25rem;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(10px);
    }

    .leaderboard-table th {
        font-weight: 600;
        color: rgba(255, 255, 255, 0.7);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .leaderboard-table td {
        color: var(--text-color);
    }

    .rank-number {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--accent-color);
    }

    @media (max-width: 768px) {
        .podium-section {
            flex-direction: column;
            align-items: center;
        }

        .podium-block {
            width: 100%;
            height: auto !important;
            margin-bottom: 1rem;
        }
    }
</style>

<div class="leaderboard-page">
    <div class="leaderboard-container">
        <h1 class="leaderboard-title">Top Traders Leaderboard</h1>
        
        <div class="podium-section">
            {% for place in [2, 1, 3] %}
                {% if leaderboard|length >= place %}
                    {% set trader = leaderboard[place-1] %}
                    <div class="podium-place {{ ['second-place', 'first-place', 'third-place'][loop.index0] }}">
                        <img src="{{ trader.profile_picture }}" alt="Profile" class="profile-picture">
                        <div class="podium-block">
                            <div class="podium-username">{{ trader.username }}</div>
                            <div class="podium-value">${{ "%.2f"|format(trader.total_value|default(0)) }}</div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <table class="leaderboard-table">
            <thead>
                <tr>
                    <th>Rank</th>
                    <th>Trader</th>
                    <th>Portfolio Value</th>
                </tr>
            </thead>
            <tbody>
                {% for trader in leaderboard[3:] %}
                    <tr>
                        <td><span class="rank-number">{{ loop.index + 3 }}</span></td>
                        <td>{{ trader.username }}</td>
                        <td>${{ "%.2f"|format(trader.total_value|default(0)) }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}