{% extends "base.html.jinja2" %}

{% block content %}
<style>
    :root {
        --accent-color: {{ user.accent_color if user and user.accent_color else '#64ffda' }};
        --background-color: {{ user.background_color if user and user.background_color else '#0a0a0a' }};
        --text-color: {{ user.text_color if user and user.text_color else '#ffffff' }};
        --card-bg: rgba(0, 0, 0, 0.3);
        --border-color: rgba(255, 255, 255, 0.1);
    }

    .leaderboard-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .leaderboard-header {
        margin-bottom: 2rem;
    }

    .leaderboard-title {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(to right, var(--text-color), rgba(255,255,255,0.7));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
    }

    .leaderboard-subtitle {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.1rem;
    }

    .user-rank {
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .rank-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .rank-number {
        font-size: 2rem;
        font-weight: 700;
        color: var(--accent-color);
    }

    .rank-text {
        font-size: 1.1rem;
    }

    .rank-value {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .leaderboard-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 0.75rem;
    }

    .leaderboard-table th {
        text-align: left;
        padding: 1rem;
        color: rgba(255, 255, 255, 0.7);
        font-weight: 600;
        border-bottom: 1px solid var(--border-color);
    }

    .leaderboard-table td {
        padding: 1rem;
        background: rgba(0, 0, 0, 0.3);
    }

    .leaderboard-table tr td:first-child {
        border-top-left-radius: 12px;
        border-bottom-left-radius: 12px;
    }

    .leaderboard-table tr td:last-child {
        border-top-right-radius: 12px;
        border-bottom-right-radius: 12px;
    }

    .user-row {
        background: rgba({{ user.accent_color if user and user.accent_color else '#64ffda' | hex_to_rgb }}, 0.1);
    }

    .user-row td {
        background: rgba({{ user.accent_color if user and user.accent_color else '#64ffda' | hex_to_rgb }}, 0.1);
        border-top: 1px solid rgba({{ user.accent_color if user and user.accent_color else '#64ffda' | hex_to_rgb }}, 0.2);
        border-bottom: 1px solid rgba({{ user.accent_color if user and user.accent_color else '#64ffda' | hex_to_rgb }}, 0.2);
    }

    .user-row td:first-child {
        border-left: 1px solid rgba({{ user.accent_color if user and user.accent_color else '#64ffda' | hex_to_rgb }}, 0.2);
    }

    .user-row td:last-child {
        border-right: 1px solid rgba({{ user.accent_color if user and user.accent_color else '#64ffda' | hex_to_rgb }}, 0.2);
    }

    .rank-medal {
        display: inline-block;
        width: 30px;
        height: 30px;
        line-height: 30px;
        text-align: center;
        border-radius: 50%;
        margin-right: 0.5rem;
        font-weight: 600;
    }

    .gold {
        background: linear-gradient(145deg, #FFD700, #FFA500);
        color: #000;
        box-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
    }

    .silver {
        background: linear-gradient(145deg, #C0C0C0, #A9A9A9);
        color: #000;
        box-shadow: 0 0 10px rgba(192, 192, 192, 0.5);
    }

    .bronze {
        background: linear-gradient(145deg, #CD7F32, #8B4513);
        color: #000;
        box-shadow: 0 0 10px rgba(205, 127, 50, 0.5);
    }

    .user-avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 0.75rem;
        border: 2px solid var(--accent-color);
    }

    .user-cell {
        display: flex;
        align-items: center;
    }

    .assets-value {
        font-family: 'SF Mono', monospace;
        font-weight: 600;
    }

    @media (max-width: 768px) {
        .leaderboard-container {
            padding: 1rem;
        }
        
        .user-row td {
            font-size: 0.85rem;
        }
        
        .user-avatar {
            width: 25px;
            height: 25px;
        }
        
        .rank-number {
            font-size: 1.5rem;
        }
        
        .leaderboard-table th:nth-child(3),
        .leaderboard-table td:nth-child(3) {
            display: none;
        }
    }
</style>

<div class="leaderboard-container">
    <div class="leaderboard-header">
        <h1 class="leaderboard-title">Leaderboard</h1>
        <p class="leaderboard-subtitle">See how you rank among other traders</p>
    </div>

    <div class="user-rank">
        <div class="rank-info">
            <div class="rank-number">#{{ current_user_rank }}</div>
            <div class="rank-text">Your current ranking</div>
        </div>
        <div class="rank-value">${{ "%.2f"|format(user.balance|default(0)) }}</div>
    </div>

    <table class="leaderboard-table">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Trader</th>
                <th>Join Date</th>
                <th>Total Assets</th>
            </tr>
        </thead>
        <tbody>
            {% for trader in leaderboard %}
                <tr {% if trader.user_id == session.user_id %}class="user-row"{% endif %}>
                    <td>
                        {% if loop.index == 1 %}
                            <span class="rank-medal gold">1</span>
                        {% elif loop.index == 2 %}
                            <span class="rank-medal silver">2</span>
                        {% elif loop.index == 3 %}
                            <span class="rank-medal bronze">3</span>
                        {% else %}
                            {{ loop.index }}
                        {% endif %}
                    </td>
                    <td class="user-cell">
                        <img src="{{ trader.profile_picture }}" alt="User" class="user-avatar">
                        <a href="{{ url_for('portfolio.view_portfolio', user_id=trader.user_id) }}">
                            {{ trader.username }}
                        </a>
                    </td>
                    <td>{{ trader.join_date.strftime('%b %d, %Y') if trader.join_date else 'N/A' }}</td>
                    <td class="assets-value">${{ "%.2f"|format(trader.total_value) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}