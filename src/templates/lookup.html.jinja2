{% extends "base.html.jinja2" %}

{% block content %}
<style>
    :root {
        --accent-color: {{ user.accent_color if user and user.accent_color else '#64ffda' }};
        --background-color: {{ user.background_color if user and user.background_color else '#0f172a' }};
        --text-color: {{ user.text_color if user and user.text_color else '#ffffff' }};
        --card-bg: rgba(0, 0, 0, 0.4);
        --border-color: rgba(255, 255, 255, 0.1);
        --positive-color: #4caf50;
        --negative-color: #f44336;
        --neutral-color: #9e9e9e;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Inter', system-ui, sans-serif;
        background: linear-gradient(to bottom, 
            var(--background-color), 
            color-mix(in srgb, var(--background-color) 70%, var(--accent-color) 30%));
        color: var(--text-color);
    }

    .market-dashboard {
        max-width: 1600px;
        margin: 0 auto;
        padding: 2rem;
    }

    .dashboard-header {
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 2.25rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: linear-gradient(to right, var(--text-color), rgba(255,255,255,0.6));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .subtitle {
        color: rgba(255, 255, 255, 0.7);
        font-size: 1.1rem;
        margin-top: 0.5rem;
    }

    .search-container {
        background: var(--card-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--border-color);
        border-radius: 24px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .search-form {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .search-input {
        flex: 1;
        padding: 1.25rem;
        font-size: 1.1rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: var(--text-color);
        transition: all 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border-color: var(--accent-color);
        box-shadow: 0 0 0 2px rgba({{ user.accent_color | hex_to_rgb if user and user.accent_color else '100, 255, 218' }}, 0.2);
    }

    .search-button {
        padding: 0 2rem;
        background: var(--accent-color);
        color: var(--background-color);
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .search-button:hover {
        filter: brightness(1.1);
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba({{ user.accent_color | hex_to_rgb if user and user.accent_color else '100, 255, 218' }}, 0.3);
    }

    .search-examples {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        margin-top: 1rem;
    }

    .search-examples span {
        cursor: pointer;
        text-decoration: underline;
        margin: 0 0.5rem;
    }

    .search-examples span:hover {
        color: var(--accent-color);
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 1.5rem;
    }

    .market-overview {
        grid-column: span 12;
        background: var(--card-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--border-color);
        border-radius: 24px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: var(--accent-color);
    }

    .indices-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .index-card {
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s ease;
    }

    .index-card:hover {
        transform: translateY(-5px);
        border-color: rgba({{ user.accent_color | hex_to_rgb if user and user.accent_color else '100, 255, 218' }}, 0.3);
    }

    .index-name {
        font-weight: 600;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .index-price {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        font-family: 'SF Mono', monospace;
    }

    .positive {
        color: var(--positive-color);
    }

    .negative {
        color: var(--negative-color);
    }

    .market-movers {
        grid-column: span 12;
        display: flex;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .movers-column {
        flex: 1;
        background: var(--card-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--border-color);
        border-radius: 24px;
        padding: 1.5rem;
    }

    .movers-list {
        margin-top: 1rem;
    }

    .mover-item {
        display: flex;
        justify-content: space-between;
        padding: 1rem;
        margin-bottom: 0.5rem;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 12px;
    }

    .mover-symbol {
        font-weight: 600;
    }

    .mover-name {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
    }

    .stock-card {
        grid-column: span 12;
        background: var(--card-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--border-color);
        border-radius: 24px;
        padding: 2rem;
        margin-bottom: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .stock-header {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .stock-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        background: linear-gradient(to right, var(--text-color), rgba(255,255,255,0.6));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .company-name {
        color: rgba(255, 255, 255, 0.7);
        font-size: 1.2rem;
        margin: 0.25rem 0 0 0;
    }

    .stock-price {
        text-align: right;
    }

    .current-price {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
    }

    .price-change {
        font-size: 1rem;
        margin: 0.25rem 0 0 0;
    }

    .stock-details {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .detail-item {
        background: rgba(0, 0, 0, 0.2);
        border-radius: 12px;
        padding: 1.25rem;
    }

    .detail-label {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 0.5rem;
    }

    .detail-value {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .stock-description {
        background: rgba(0, 0, 0, 0.2);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .description-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .description-text {
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.8);
    }

    .stock-charts {
        margin-top: 2rem;
    }

    .main-chart {
        margin-bottom: 2rem;
    }

    .indicator-charts {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .chart-container {
        background: rgba(0, 0, 0, 0.2);
        border-radius: 12px;
        padding: 1rem;
        overflow: hidden;
    }

    .secondary-info {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .news-container, .related-stocks {
        background: var(--card-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--border-color);
        border-radius: 24px;
        padding: 1.5rem;
    }

    .news-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .news-item {
        display: flex;
        gap: 1rem;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 12px;
        padding: 1rem;
        transition: all 0.3s ease;
    }

    .news-item:hover {
        transform: translateY(-2px);
        border-color: rgba({{ user.accent_color | hex_to_rgb if user and user.accent_color else '100, 255, 218' }}, 0.3);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .news-thumbnail {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        object-fit: cover;
        background: rgba(0, 0, 0, 0.3);
    }

    .news-content {
        flex: 1;
    }

    .news-title {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .news-meta {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .related-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 1rem;
    }

    .related-item {
        background: rgba(0, 0, 0, 0.2);
        border-radius: 12px;
        padding: 1rem;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .related-item:hover {
        transform: translateY(-2px);
        background: rgba({{ user.accent_color | hex_to_rgb if user and user.accent_color else '100, 255, 218' }}, 0.1);
        border-color: rgba({{ user.accent_color | hex_to_rgb if user and user.accent_color else '100, 255, 218' }}, 0.3);
    }

    .related-symbol {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .related-name {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .recommendation-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 0.9rem;
        margin-left: 1rem;
    }

    .error-message {
        background: rgba(244, 67, 54, 0.2);
        border: 1px solid rgba(244, 67, 54, 0.3);
        border-radius: 12px;
        padding: 1rem;
        margin: 1rem 0;
        color: var(--negative-color);
    }

    @media (max-width: 768px) {
        .market-dashboard {
            padding: 1rem;
        }
        
        .search-form {
            flex-direction: column;
        }
        
        .secondary-info {
            grid-template-columns: 1fr;
        }
        
        .market-movers {
            flex-direction: column;
        }
        
        .indicator-charts {
            grid-template-columns: 1fr;
        }
        
        .stock-header {
            flex-direction: column;
            align-items: flex-start;
        }
        
        .stock-price {
            text-align: left;
        }
    }
</style>

<div class="market-dashboard">
    <div class="dashboard-header">
        <h1 class="page-title">Market Lookup</h1>
        <p class="subtitle">Research stocks, analyze market trends, and track performance</p>
    </div>
    
    <div class="search-container">
        <form method="POST" action="{{ url_for('charts.lookup') }}" class="search-form">
            <input type="text" name="symbol" class="search-input" placeholder="Enter a stock symbol (e.g., AAPL, MSFT, GOOGL)" value="{{ symbol }}" required>
            <button type="submit" class="search-button">Search</button>
        </form>
        <div class="search-examples">
            Examples: 
            <span class="example-symbol" data-symbol="AAPL">AAPL</span>
            <span class="example-symbol" data-symbol="MSFT">MSFT</span>
            <span class="example-symbol" data-symbol="GOOGL">GOOGL</span>
            <span class="example-symbol" data-symbol="AMZN">AMZN</span>
            <span class="example-symbol" data-symbol="TSLA">TSLA</span>
        </div>
    </div>
    
    <div class="dashboard-grid">
        <div class="market-overview">
            <h2 class="section-title">Market Overview</h2>
            <div class="indices-grid">
                {% for symbol, data in market_overview.items() %}
                    <div class="index-card">
                        <div class="index-name">{{ data.name }}</div>
                        <div class="index-price">${{ "%.2f"|format(data.close) }}</div>
                        <div class="index-change {% if data.change > 0 %}positive{% elif data.change < 0 %}negative{% endif %}">
                            {{ "%+.2f"|format(data.change) }}%
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
        <div class="market-movers">
            <div class="movers-column">
                <h2 class="section-title">Top Gainers</h2>
                <div class="movers-list">
                    {% if gainers %}
                        {% for stock in gainers %}
                            <div class="mover-item">
                                <div>
                                    <div class="mover-symbol">{{ stock.symbol }}</div>
                                    <div class="mover-name">{{ stock.name }}</div>
                                </div>
                                <div class="positive">+{{ "%.2f"|format(stock.change_pct) }}%</div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="mover-item">No data available</div>
                    {% endif %}
                </div>
            </div>
            
            <div class="movers-column">
                <h2 class="section-title">Top Losers</h2>
                <div class="movers-list">
                    {% if losers %}
                        {% for stock in losers %}
                            <div class="mover-item">
                                <div>
                                    <div class="mover-symbol">{{ stock.symbol }}</div>
                                    <div class="mover-name">{{ stock.name }}</div>
                                </div>
                                <div class="negative">{{ "%.2f"|format(stock.change_pct) }}%</div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="mover-item">No data available</div>
                    {% endif %}
                </div>
            </div>
        </div>
        
        {% if error_message %}
            <div class="error-message">{{ error_message }}</div>
        {% endif %}
        
        {% if stock_data %}
            <div class="stock-card">
                <div class="stock-header">
                    <div>
                        <h1 class="stock-title">{{ symbol }}</h1>
                        <p class="company-name">{{ stock_data.company_name }}</p>
                        {% if stock_data.recommendation %}
                            <span class="recommendation-badge" style="background-color: {{ stock_data.recommendation_color }}">
                                {{ stock_data.recommendation|replace('_', ' ') }}
                            </span>
                        {% endif %}
                    </div>
                    <div class="stock-price">
                        <p class="current-price">${{ "%.2f"|format(stock_data.close) }}</p>
                        <p class="price-change {% if stock_data.close > stock_data.prev_close %}positive{% elif stock_data.close < stock_data.prev_close %}negative{% endif %}">
                            {% if stock_data.prev_close %}
                                {{ "%+.2f"|format(stock_data.close - stock_data.prev_close) }} ({{ "%+.2f"|format(((stock_data.close - stock_data.prev_close) / stock_data.prev_close) * 100) }}%)
                            {% endif %}
                        </p>
                    </div>
                </div>
                
                <div class="stock-details">
                    <div class="detail-item">
                        <div class="detail-label">Previous Close</div>
                        <div class="detail-value">${{ "%.2f"|format(stock_data.prev_close) }}</div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">Day Range</div>
                        <div class="detail-value">${{ "%.2f"|format(stock_data.low) }} - ${{ "%.2f"|format(stock_data.high) }}</div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">Volume</div>
                        <div class="detail-value">{{ '{:,}'.format(stock_data.volume) }}</div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">Market Cap</div>
                        <div class="detail-value">
                            {% if stock_data.market_cap %}
                                ${{ '{:,.0f}'.format(stock_data.market_cap/1000000000) }}B
                            {% else %}
                                N/A
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">52-Week High</div>
                        <div class="detail-value">
                            {% if stock_data.year_high %}
                                ${{ "%.2f"|format(stock_data.year_high) }}
                            {% else %}
                                N/A
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">52-Week Low</div>
                        <div class="detail-value">
                            {% if stock_data.year_low %}
                                ${{ "%.2f"|format(stock_data.year_low) }}
                            {% else %}
                                N/A
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">P/E Ratio</div>
                        <div class="detail-value">
                            {% if stock_data.forward_pe %}
                                {{ "%.2f"|format(stock_data.forward_pe) }}
                            {% else %}
                                N/A
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">EPS</div>
                        <div class="detail-value">
                            {% if stock_data.eps %}
                                ${{ "%.2f"|format(stock_data.eps) }}
                            {% else %}
                                N/A
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">Beta</div>
                        <div class="detail-value">
                            {% if stock_data.beta %}
                                {{ "%.2f"|format(stock_data.beta) }}
                            {% else %}
                                N/A
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">Target Price</div>
                        <div class="detail-value">
                            {% if stock_data.target_price %}
                                ${{ "%.2f"|format(stock_data.target_price) }}
                            {% else %}
                                N/A
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">Sector</div>
                        <div class="detail-value">{{ stock_data.sector or 'N/A' }}</div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">Industry</div>
                        <div class="detail-value">{{ stock_data.industry or 'N/A' }}</div>
                    </div>
                </div>
                
                {% if stock_data.long_business_summary %}
                    <div class="stock-description">
                        <h3 class="description-title">About {{ stock_data.company_name }}</h3>
                        <div class="description-text">
                            {% if stock_data.long_business_summary|length > 500 %}
                                <div id="summary-short">{{ stock_data.long_business_summary[:500] }}... <a href="#" id="read-more" style="color: var(--accent-color);">Read more</a></div>
                                <div id="summary-full" style="display: none;">{{ stock_data.long_business_summary }} <a href="#" id="read-less" style="color: var(--accent-color);">Read less</a></div>
                            {% else %}
                                {{ stock_data.long_business_summary }}
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
                
                <div class="stock-charts">
                    <div class="main-chart">
                        {{ graph_html|safe }}
                    </div>
                    
                    <div class="indicator-charts">
                        <div class="chart-container">
                            {{ rsi_html|safe }}
                        </div>
                        
                        <div class="chart-container">
                            {{ macd_html|safe }}
                        </div>
                        
                        <div class="chart-container">
                            {{ volume_html|safe }}
                        </div>
                    </div>
                </div>
                
                <div class="secondary-info">
                    <div class="news-container">
                        <h2 class="section-title">Latest News</h2>
                        <div class="news-list">
                            {% if company_news %}
                                {% for news in company_news %}
                                    <a href="{{ news.link }}" target="_blank" style="text-decoration: none; color: inherit;">
                                        <div class="news-item">
                                            <img src="{{ news.thumbnail if news.thumbnail else '' }}" class="news-thumbnail" onerror="this.style.display='none'">
                                            <div class="news-content">
                                                <div class="news-title">{{ news.title }}</div>
                                                <div class="news-meta">
                                                    {{ news.publisher }} • {{ news.timestamp.strftime('%b %d, %Y') }}
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                {% endfor %}
                            {% else %}
                                <div class="news-item">No recent news available</div>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="related-stocks">
                        <h2 class="section-title">Related Stocks</h2>
                        <div class="related-list">
                            {% if related_stocks %}
                                {% for stock in related_stocks %}
                                    <div class="related-item" onclick="window.location.href='{{ url_for('charts.lookup', symbol=stock.symbol) }}'">
                                        <div class="related-symbol">{{ stock.symbol }}</div>
                                        <div class="related-name">{{ stock.name }}</div>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <div style="grid-column: 1/-1;">No related stocks found</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div style="margin-top: 1.5rem; display: flex; gap: 1rem;">
                    <a href="{{ url_for('trading.buy') }}?symbol={{ symbol }}" style="text-decoration: none;">
                        <button class="search-button">Buy {{ symbol }}</button>
                    </a>
                    
                    <button id="addToWatchlist" class="search-button" style="background: rgba(255,255,255,0.1); color: var(--text-color);">
                        Add to Watchlist
                    </button>
                </div>
            </div>
        {% endif %}
    </div>
</div>

<script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Example symbol click handler
        document.querySelectorAll('.example-symbol').forEach(item => {
            item.addEventListener('click', function() {
                const symbol = this.dataset.symbol;
                document.querySelector('input[name="symbol"]').value = symbol;
                document.querySelector('.search-form').submit();
            });
        });
        
        // Read more/less toggle
        const readMoreBtn = document.getElementById('read-more');
        const readLessBtn = document.getElementById('read-less');
        const summaryShort = document.getElementById('summary-short');
        const summaryFull = document.getElementById('summary-full');
        
        if (readMoreBtn && readLessBtn && summaryShort && summaryFull) {
            readMoreBtn.addEventListener('click', function(e) {
                e.preventDefault();
                summaryShort.style.display = 'none';
                summaryFull.style.display = 'block';
            });
            
            readLessBtn.addEventListener('click', function(e) {
                e.preventDefault();
                summaryFull.style.display = 'none';
                summaryShort.style.display = 'block';
            });
        }
        
        // Add to watchlist functionality
        const addToWatchlistBtn = document.getElementById('addToWatchlist');
        if (addToWatchlistBtn) {
            addToWatchlistBtn.addEventListener('click', async function() {
                const symbol = '{{ symbol }}';
                const assetType = 'stock'; // Default to stock
                
                try {
