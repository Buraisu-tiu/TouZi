{% extends "base.html.jinja2" %}
{% block content %}
<style>
    :root {
        --accent-color: {{ user.accent_color if user and user.accent_color else '#64ffda' }};
        --background-color: {{ user.background_color if user and user.background_color else '#0a0a0a' }};
        --text-color: #fff;
    }

    body {
        background-color: var(--background-color);
        color: white;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .sell-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .sell-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .sell-header h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, var(--accent-color), #3b82f6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .positions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .position-card {
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 1.5rem;
        transition: all 0.3s ease;
    }

    .position-card:hover {
        transform: translateY(-2px);
        border-color: var(--accent-color);
    }

    .position-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .position-symbol {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--accent-color);
    }

    .position-value {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .position-details {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .detail-item {
        text-align: center;
    }

    .detail-label {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
        text-transform: uppercase;
        margin-bottom: 0.25rem;
    }

    .detail-value {
        font-size: 1rem;
        font-weight: 600;
    }

    .sell-form {
        display: flex;
        gap: 1rem;
        align-items: end;
    }

    .sell-form input {
        flex: 1;
        padding: 0.75rem;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        color: white;
        font-size: 1rem;
    }

    .sell-form input:focus {
        outline: none;
        border-color: var(--accent-color);
    }

    .sell-button {
        padding: 0.75rem 1.5rem;
        background: #ef4444;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .sell-button:hover {
        background: #dc2626;
        transform: translateY(-1px);
    }

    .no-positions {
        text-align: center;
        padding: 3rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .alert {
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .alert-success {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        color: #4ade80;
    }

    .alert-error {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #f87171;
    }
</style>

<div class="sell-container">
    <div class="sell-header">
        <h1>Sell Stocks</h1>
        <p>Select a position below to sell shares</p>
    </div>

    <!-- Flash Messages -->
    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
            {% for category, message in messages %}
                <div class="alert alert-{{ 'success' if category == 'success' else 'error' }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}
    {% endwith %}

    {% if positions and positions|length > 0 %}
        <div class="positions-grid">
            {% for position in positions %}
                <div class="position-card">
                    <div class="position-header">
                        <div class="position-symbol">{{ position.symbol }}</div>
                        <div class="position-value">${{ "%.2f"|format(position.value) }}</div>
                    </div>
                    
                    <div class="position-details">
                        <div class="detail-item">
                            <div class="detail-label">Shares</div>
                            <div class="detail-value">{{ position.shares }}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Current Price</div>
                            <div class="detail-value">${{ "%.2f"|format(position.current_price) }}</div>
                        </div>
                    </div>

                    <!-- Sell Form -->
                    <form method="POST" action="{{ url_for('trading.sell') }}" class="sell-form">
                        <input type="hidden" name="symbol" value="{{ position.symbol }}">
                        <input 
                            type="number" 
                            name="shares" 
                            placeholder="Shares to sell"
                            min="0.01"
                            max="{{ position.shares }}"
                            step="0.01"
                            required
                        >
                        <button type="submit" class="sell-button">
                            Sell {{ position.symbol }}
                        </button>
                    </form>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="no-positions">
            <h2>No Positions to Sell</h2>
            <p>You don't currently own any stocks.</p>
            <a href="{{ url_for('trading.buy') }}" style="color: var(--accent-color);">Start Trading â†’</a>
        </div>
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add confirmation before selling
    const sellForms = document.querySelectorAll('.sell-form');
    
    sellForms.forEach(form => {
        form.addEventListener('submit', function(e) {
            const symbol = form.querySelector('input[name="symbol"]').value;
            const shares = form.querySelector('input[name="shares"]').value;
            
            if (!shares || shares <= 0) {
                e.preventDefault();
                alert('Please enter a valid number of shares');
                return;
            }
            
            const confirmed = confirm(`Are you sure you want to sell ${shares} shares of ${symbol}?`);
            if (!confirmed) {
                e.preventDefault();
            }
        });
    });
});
</script>
{% endblock %}